<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title %></title>
    <%- include('partials/head') %>
    <!-- Estilos personalizados -->
    <style>
        /* Ajuste para que el footer siempre esté al final */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .content {
            flex: 1;
        }
        /* Estilo para la tabla del carrito */
        table {
            margin-top: 20px;
        }
        .table th, .table td {
            text-align: center;
        }
        .table th {
            background-color: #f8f9fa;
        }
        /* Botón de pago */
        .btn-warning {
            background-color: #f39c12;
            border-color: #e67e22;
        }
        .btn-warning:hover {
            background-color: #e67e22;
            border-color: #d35400;
        }
    </style>
</head>
<body>
    <!-- Barra de navegación -->
    <%- include('partials/navigation') %>

    <!-- Contenido principal -->
    <div class="content">
        <div class="container mt-5">
            <h2 class="text-center mb-4">Carrito de Compras</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Producto 1</td>
                            <td>S/ 25.00</td>
                            <td>1</td>
                            <td>S/ 25.00</td>
                        </tr>
                        <tr>
                            <td>Producto 2</td>
                            <td>S/ 30.00</td>
                            <td>2</td>
                            <td>S/ 60.00</td>
                        </tr>
                        <tr>
                            <td>Producto 3</td>
                            <td>S/ 40.00</td>
                            <td>1</td>
                            <td>S/ 40.00</td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Total</th>
                            <th>S/ 125.00</th>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="text-end mt-3">
                <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#cartModal">Proceder al Pago</button>
            </div>
        </div>

        <!-- Modal para el pago -->
        <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="cartModalLabel">Confirmación de Compra</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ¿Estás seguro de que deseas proceder con el pago?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" id="confirmarPagoBtn">Confirmar Pago</button>
                  </div>
                 
                </div>
            </div>
        </div>
    </div>
    <div class="mt-4"></div>
    </div>
    <div class="mt-4"></div>
    </div>
    <!-- Pie de página -->
    <%- include('partials/footer') %>

    <script>
      // Obtener el botón de confirmar pago por su ID
      const confirmarPagoBtn = document.getElementById('confirmarPagoBtn');
  
      // Agregar el evento click al botón
      confirmarPagoBtn.addEventListener('click', function() {
          // Usar SweetAlert para mostrar un mensaje
          Swal.fire({
              icon: 'success',
              title: 'Pago Exitoso',
              text: 'El pago ha sido registrado correctamente.',
              confirmButtonText: 'Aceptar'
          });
          
          // Si deseas cerrar el modal después de mostrar el mensaje
          // Puedes obtener el modal y cerrarlo de la siguiente manera:
          const modal = bootstrap.Modal.getInstance(document.getElementById('tuModalId'));
          modal.hide();
      });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
